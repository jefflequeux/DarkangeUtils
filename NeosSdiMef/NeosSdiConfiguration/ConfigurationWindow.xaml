<Window x:Class="NeosSdiConfiguration.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neos SDI Configuration" Height="500" Width="700" xmlns:my="clr-namespace:NeosSdiConfiguration.Controls" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MaxWidth="500" MinWidth="100" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <my:ConfigurationTreeview x:Name="configurationTreeview" />
        </Grid>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="LightGray" BorderBrush="Gray" BorderThickness="1, 0, 1, 0" />
        <Grid Grid.Column="2" Name="contentGrid">
        </Grid>
    </Grid>
</Window>
